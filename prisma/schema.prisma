generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Song {
  id          String     @id @default(cuid())
  title       String
  artist      String
  duration    Int
  coverImage  String
  audioUrl    String
  lyrics      String?
  published   Boolean    @default(true)
  playlistId  String?
  playlist    Playlist?  @relation(fields: [playlistId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations with fans
  favorites   Favorite[]
  playlistSongs UserPlaylistSong[]
}

model Playlist {
  id          String   @id @default(cuid())
  name        String
  description String?
  isOfficial  Boolean  @default(false) // Official playlists vs user playlists
  userId      String?  // Owner if it's a user playlist
  user        User?    @relation("OfficialPlaylists", fields: [userId], references: [id])
  songs       Song[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  role          String    @default("fan") // "admin" or "fan"
  isActive      Boolean   @default(true)
  totalPlays    Int       @default(0)
  joinDate      DateTime  @default(now())
  lastLogin     DateTime?
  
  // Fan engagement metrics
  favoriteCount Int       @default(0)
  playlistCount Int       @default(0)
  loyaltyPoints Int       @default(0)
  tier          String    @default("bronze") // bronze, silver, gold, platinum
  
  // Relations
  favorites     Favorite[]
  playlists     UserPlaylist[] @relation("UserPlaylists")
  officialPlaylists Playlist[] @relation("OfficialPlaylists")
  activities    Activity[]
  rewards       Reward[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  songId    String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  song      Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
  
  @@unique([userId, songId])
}

model UserPlaylist {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation("UserPlaylists", fields: [userId], references: [id], onDelete: Cascade)
  songs       UserPlaylistSong[]
}

model UserPlaylistSong {
  id         String   @id @default(cuid())
  playlistId String
  songId     String
  position   Int
  addedAt    DateTime @default(now())
  
  playlist   UserPlaylist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  song       Song         @relation(fields: [songId], references: [id], onDelete: Cascade)
}

model Activity {
  id          String   @id @default(cuid())
  userId      String
  type        String   // "play", "favorite", "playlist_create", "share"
  songId      String?
  metadata    String?  // JSON for additional data
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Reward {
  id          String   @id @default(cuid())
  userId      String
  type        String   // "badge", "early_access", "exclusive_content"
  title       String
  description String?
  icon        String?
  unlockedAt  DateTime @default(now())
  expiresAt   DateTime?
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}